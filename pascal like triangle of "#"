a = int(input("Enter the number of rows"))
k = 2 
for i in range (1,a+1):
    for j in range(a-i,0,-1):
        print(" ",end = "")
    for m in range(1,i+1):
        print("#",end = "")
    for k in range(2,i+1):
        print("#",end="")
    for l in range (a-i-1,0,-1):
        print(" ",end="")
    print()
    i = i+1
    j=j-1
    k = k +1
    l = l-1
    m = m+1
    
